<style>
    body {
        background-color: #ff5455;
    }

    .codeSection {
        padding: 10px;
        display: flex;
        justify-content: center;
        margin-bottom: 30px;
    }

    .codeGenerator {
        padding: 10px;
        border-radius: 25px;
        background-color: #ff5455;
        border-color: white;
        color: white;
        font-family: Cocogoose;
        cursor: pointer;
        transition: 0.2s;
        box-shadow: 10px;
    }

    .codeGenerator:hover {
        background-color: #e34b4c;
        transform: scale(1.1);
        color: white;
    }

    .jumbotron {
        padding-left: 0; 
        padding-right: 0;
        margin-bottom: 30px;
        color: inherit;
        background-color: #eeeeee;
        border: none;
        outline: none;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 40px;
        font-weight: bold;
        content: attr(data-text);
        height: 300px;
        text-align: center;
        vertical-align: middle;
        transition: 0.2s;
        overflow: scroll;
        white-space: nowrap;
    }

    .jumbotron:empty:not(:focus):before { 
        content: attr(date-text);
        text-align: center;

    }

    .jumbotron:hover {
        transform: scale(1.05);
    }
    .inputCode {
        padding: 10px;
        border-radius: 25px;
        border-color: white;
        color: white;
        font-family: Cocogoose;
        cursor: pointer;
        transition: 0.2s;
        box-shadow: 10px;
    }
    .form {
        font-family: Cocogoose;
        display: flex;
        width: 30%;
        position: relative;
        height: 60px;
        overflow: hidden;
        padding-bottom: 10px;
        border-radius: 25px;
        border-color: white;
        color: white;
        align-content: center;
        margin: 0 auto;
    }
    .form input {
        width: 100%;
        height: 100%;
        color: white;
        padding-top: 20px;
        padding-left: -10px;
        border: none;
        background-color: transparent;
        text-align: center;
        transform: translateX(-10%);
    }

    .form label {
        position: absolute;
        bottom: 0px;
        left: 15px;
        width: 100%;
        height: 100%;
        pointer-events: none;
        border-bottom: 1px solid white;
    }

    .content-name {
        position: absolute;
        bottom: 0px;
        left: 0px;
        padding-bottom: 5px;
        transition: all 0.3s ease;
    }

    .form input:focus {
        outline: none;
    }

    .form input:focus + .label-name .content-name,.form input:valid + .label-name .content-name {
        transform: translateX(150%);
        font-size: 14px;
        left: 0px;
        color: #b23a3b;
    }
    .alignRight {
        margin-bottom: 25px;
    }
</style>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Today's Date</title>
</head>
<body>
    <div id="pasteBox" contenteditable="true" class="jumbotron" data-text="Paste anything here!">
    </div>
    <div class="row">
        <div class="codeSection">
            <button class="codeGenerator"> Get My Code </button>
        </div>
        <div class="alignRight">
            <div class="form">
                <input maxlength="4" type="text" name="text" required />
                <label for="text" class="label-name">
                    <span class="content-name">
                        Your Code Here
                    </span>
                </label>
            </div>
        </div>
    </div>
    <div contenteditable="true" style="height: 300px;" class="jumbotron">
    </div>
    <script src="~/Views/Home/JavaScript.js" >
        
    </script>
</body>