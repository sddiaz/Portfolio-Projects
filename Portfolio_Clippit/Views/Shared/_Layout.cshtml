<!DOCTYPE html>
<style>
    .title {
        font-family: Newake;
        color: white;
        text-shadow: -1px 0 #ff5455, 0 1px #ff5455, 1px 0 black, 0 -1px black;
        margin: 0 auto;
        text-align: center;
        font-size: 55px;
    }
    .logo {
        display: inline;
        height: 30px;
        float: right;
        border-color: transparent;
        background-color: transparent;
        margin-right: 10px;
    }
</style>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/copy_paste_documents_files_icon_178877.ico" />
    <title>Clippit - Online Clipboard</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="title">
        Clippit
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <span>
@*                Social Links
*@                <a href="https://www.linkedin.com/in/santiagoddiaz/" target="_blank">
                    <img class="logo" src="~/Images/linkedin-3-xxl.png" />
                </a>
                <a href="https://github.com/sddiaz" target="_blank">
                    <img  class="logo" src="~/Images/GitHub-Mark-Light-32px.png" />
                </a>
            </span>
            <p style="font-size: 20px; font-family: Ametuer; color: white; ">&copy; @DateTime.Now.Year - Made with ♡ by Santiago Diaz </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
